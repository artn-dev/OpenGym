<%- include('../head.ejs'); %>

<div class="container">
  <form method="post">
    <div class="mb-3">
      <label for="iExeNome" class="form-label">Nome da rotina</label>
      <input type="text" class="form-control" id="iExeNome" name="iExeNome" aria-describedby="iExeNome" required>
    </div>

    <div class="mb-3">
      <label for="irotExercicio" class="form-label">Exercícios conhecidos</label>
      <div class="row">
        <div class="col">
          <select class="form-select" id="irotExercicio">
            <option selected>Selecione um exercício</option>
            <% for( var i in exercises ) { %>
              <option value="<%- i %>"><%= exercises[i] %></option>
            <% } %>
          </select>
        </div>
        <div class="col-3">
          <button id="add-exercise" type="button" class="btn btn-sm btn-primary">
            Adicionar à rotina
          </button>
        </div>
      </div>
    </div>

    <div id="form-footer" class="mt-5">
      <button type="submit" class="btn btn-primary">Criar rotina</button>
      <a href="/rotinas" class="btn btn-light">Cancelar</a>
    </div>
  </form>
</div>

<script>
  $(document).ready(function() {
    $('#add-exercise').click(function() {
      let selectedExercise = $('#irotExercicio option:selected[value]');

      if (selectedExercise.length === 0)
        return;

      let exerciseId = selectedExercise.val();
      let exerciseName = selectedExercise.text();

      $('#form-footer').before(`
        <div class="card exercise-data" data-id="${exerciseId}">
          <div class="card-body row">
            <div class="col form-floating">
              <input type="text" class="form-control" id="exe" value="${exerciseName}" readonly>
              <label for="exe" class="form-label">Nome do exercício</label>
            </div>
            <div class="col-3 form-floating">
              <input type="number" class="form-control" id="exe-sets" required>
              <label for="exe-sets" class="form-label">Número de séries</label>
            </div>
            <div class="col-1 d-flex align-items-center remove-exercise">
              <a role="button" class="btn btn-danger text-white">
                <i class="bi bi-trash-fill"></i>
              </a>
            </div>
          </div>
        </div>
      `)
    })

    $(document).on('click', '.remove-exercise', function() {
      $(this).parents('.exercise-data').remove();
    })

    $('form').submit(function(e) {
      e.preventDefault();

      let data = {
        routineName: $('#iExeNome').val(),
        exercises: [],
      };

      $('.exercise-data').each(function(index) {
        let id = $(this).data('id');
        let sets = $(this).find('input#exe-sets').val();

        data.exercises.push({ id: id, sets: sets });
      })

      $.ajax({
        type: 'post',
        url: '/rotinas/criar-rotina',
        data: JSON.stringify(data),
        contentType: 'application/json',
        success: function(response) {
          window.location.href = '/rotinas';
        },
        error: function(error) {
          console.error('Erro na requisição', error);
        }
      })
    })
  })
</script>

<%- include('../tail.ejs'); %>
